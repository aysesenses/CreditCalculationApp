<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/paymentPlanConstraint"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/remaining_money_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="center"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/principal_text"
            app:layout_constraintEnd_toStartOf="@+id/principal_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/maturity_text"
            app:layout_constraintTop_toTopOf="@+id/principal_text"
            tools:text="14₺" />

        <TextView
            android:id="@+id/principal_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="center"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/interest_text"
            app:layout_constraintEnd_toStartOf="@+id/interest_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/remaining_money_text"
            app:layout_constraintTop_toTopOf="@+id/interest_text"
            tools:text="332₺" />

        <TextView
            android:id="@+id/interest_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="center"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/installment_text"
            app:layout_constraintEnd_toStartOf="@+id/installment_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/principal_text"
            app:layout_constraintTop_toTopOf="@+id/installment_text"
            tools:text="222₺" />

        <TextView
            android:id="@+id/installment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="center"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/interest_text"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="564₺" />

        <TextView
            android:id="@+id/maturity_text"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="center"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/remaining_money_text"
            app:layout_constraintEnd_toStartOf="@+id/remaining_money_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/remaining_money_text"
            tools:text="1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>